<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "contacts" %>
<% end %>

<%= content_for :header_banner do %>
   <div class="bg-1-wrapper"> 
        <%= image_tag("slide-1.jpg", :class => "inside") %>
        <div class="bg-1">
            <h1><%= link_to image_tag("logo.png"), root_url %></h1>
        </div>
    </div>
<% end %>

    <div class="bord-1">
        <div class="container_12 contacts">
            <div class="grid_12">
                <div class="row">
                    <div class="map_wrapper col-1">
                        <h2 class="v2">You can locate us here </h2>
                        <div class="img-bord">
                            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=fr&amp;geocode=&amp;q=53110+La+Guilti%C3%A8re,+Thub%C5%93uf,+France&amp;aq=4&amp;oq=la+guiltiere+53110+&amp;sll=37.0625,-95.677068&amp;sspn=35.957999,86.572266&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=La+Guilti%C3%A8re,+Thub%C5%93uf,+Mayenne,+Pays+de+la+Loire,+France&amp;z=14&amp;iwloc=A&amp;ll=48.491066,-0.449788&amp;output=embed"></iframe><br /><small><a href="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=fr&amp;geocode=&amp;q=53110+La+Guilti%C3%A8re,+Thub%C5%93uf,+France&amp;aq=4&amp;oq=la+guiltiere+53110+&amp;sll=37.0625,-95.677068&amp;sspn=35.957999,86.572266&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=La+Guilti%C3%A8re,+Thub%C5%93uf,+Mayenne,+Pays+de+la+Loire,+France&amp;z=14&amp;iwloc=A&amp;ll=48.491066,-0.449788" style="color:#0000FF;text-align:left">Agrandir le plan</a></small>
                        </div>
                    </div>
                    <div class="col-2">
                        <p></p>
                        <dl class="address">
                            <dt>53110 thuboeuf <br>la guiltiere  France</dt>
                            <dd><span>Freephone:</span>+1 800 559 6580</dd>
                            <dd><span>Telephone:</span>+1 800 603 6035</dd>
                            <dd><span class="e-mail">E-mail: <a href="mailto:jenny@la-guiltiere.fr" class="demo color-1">jenny@la-guiltiere.fr</a></span></dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <h2>contact form</h2>
                    <%= form_for :contact_us, html: { class: "clearfix", id: "contact-form" } do |f| %>
                        <fieldset class="fleft">
                            <label class="name">
                            	  <span>Name:</span>
                                <%= f.text_field :name %>
											<span class="empty-message">*This field is required.</span>
                                <span class="error-message">*This is not a valid name.</span>
                            </label>
                            <label class="email">
                            		<span>Email:</span>
                                <%= f.text_field :email %>
                                <span class="empty-message">*This field is required.</span>
                                <span class="error-message">*This is not a valid email.</span>
                            </label>
                            <label class="phone">
                            		<span>Telephone:</span>
                                <%= f.text_field :telephone %>
                                <span class="empty-message">*This field is required.</span>
                                <span class="error-message">*This is not a valid phone.</span>
                            </label>
                        </fieldset>
                        <fieldset class="fright">
                            <label class="message">
                            		<span>Message:</span>
                                <%= f.text_area :message %>
                                <span class="empty-message">*This field is required.</span>
                                <span class="error-message">*The message is too short.</span>
                            </label>
                        </fieldset>
                        <div class="form_buttons">
                             <%= f.submit value: "Send Message", class: 'link' %>
                        </div>
                     <% end %>
                </div>
            </div>
        </div>
    </div>

