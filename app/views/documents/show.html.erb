
<%= content_for :header_banner do %>
   <div class="bg-1-wrapper"> 
        <%= image_tag("slide-1.jpg", :class => "inside") %>
        <div class="bg-1">
            <h1><%= link_to image_tag("logo.png"), root_url %></h1>
        </div>
    </div>
<% end %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "touchTouch" %>
<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag "touchTouch.jquery" %>
<% end %>

<% content_for :script do %>
    <script>
        $(window).load(function() {
            $('.magnifier').touchTouch();
        })
    </script>
 
<% end %>


<section class="content">
  
    <div class="bord-1">
        <div class="container_12">
            <div class="row">
                <div class="grid_8">
                    <h2 class="v2"><%=raw @document.name %></h2>

			<%=raw @document.intro %>
			<%=raw @document.main %> 
               </div>
               <div class="grid_3">
                 <h2>Images</h2><small>Click on an image to see full size</small>
      
                 <br /><br />                
                 <br /><br />                
  
                 <div class="gallery grid_inside">
                    <% @document.documentsimages.each do |p| %>
                      <a href="<%= p.filename_url %>"  class="magnifier"><span class="img-bord"><%= image_tag p.filename_url(:thumb)  %></span></a>
                      <br />
                    <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
</section>
